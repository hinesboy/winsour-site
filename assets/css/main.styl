@import "./var.styl"

*
  margin 0
  padding 0
  box-sizing border-box
body,html
  line-height 1
  font-weight 200
  font-family "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
  font-size 14px


.page-content
  width 100%
  min-height 800px

.container
  width 82%
  margin 0 auto
  @media only all and (max-width 1400px)
    width 87%
  @media only all and (max-width 1000px)
    width 94%
